<% layout("/layouts/boilerplate.ejs") %>
  <body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for(let listing of data) { %>
        <a href="/listings/<%=listing._id %>" class="card-show">
        <div class="card" style="width: 20rem;">
          <img src="<%= listing.image %>" class="card-img-top" alt="Place Image" style="height: 20rem;">
          <div class="card-body">
            <p class="card-text"><b><%=listing.title %></b> <br>  &#8377; <%=listing.price.toLocaleString("en-IN")%></p>
          </div>
        </div>
      </a>
        <% } %>
    </div>
    <script>
      window.addEventListener("load",()=>{
        if(window.location.search.includes("posted=true")){
          alert("Place Listed");
        }
        else if(window.location.search.includes("post=updated")){
          alert("Place Details Updated");
        }
        else if(window.location.search.includes("post=deleted")){
          alert("Place Details Updated");
        }
      })
    </script>
  </body>
